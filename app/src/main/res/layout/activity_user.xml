<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="8dp"
            android:src="@drawable/ic_home"
            app:tint="@color/title_font_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:fontFamily="@font/cafe24_ssurround"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="내 정보"
            android:textColor="@color/title_font_color"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/setting_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1.5"
            android:padding="8dp"
            android:src="@drawable/ic_setting"
            app:tint="@color/title_font_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/title_font_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/user_tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/kotra_hope"
            android:gravity="center"
            android:text="wsx4379@naver.com"
            android:textColor="@color/title_font_color"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/user_tv_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kotra_hope"
            android:gravity="center"
            android:text="이메일: wsx4379@naver.com"
            android:textColor="@color/title_font_color"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/user_btn_change_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/kotra_hope"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="닉네임 변경"
            android:textColor="@color/title_font_color"
            android:textSize="40sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_btn_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/kotra_hope"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="평가한 메뉴 확인"
            android:textColor="@color/title_font_color"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_btn_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/kotra_hope"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="즐겨찾기한 메뉴"
            android:textColor="@color/title_font_color"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/kotra_hope"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="로그아웃"
            android:textColor="@color/title_font_color"
            android:textSize="40sp" />
    </LinearLayout>

</LinearLayout>