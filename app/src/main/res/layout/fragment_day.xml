<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background"
    android:orientation="vertical"
    android:id="@+id/fragment_day">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/mjd_mon_restaurant1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/kotra_hope"
                android:text="자율한식"
                android:textColor="@color/main_color_orange"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/mjd_mon_menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/kotra_hope"
                android:text="메뉴 1"
                android:textColor="@color/title_font_color"
                android:textSize="35sp"
                android:lineSpacingExtra="10dp"/>


            <TextView
                android:id="@+id/mjd_mon_restaurant2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/kotra_hope"
                android:text="푸드코트"
                android:textColor="@color/main_color_orange"
                android:textSize="45sp" />


            <TextView
                android:id="@+id/mjd_mon_menu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/kotra_hope"
                android:text="메뉴 2"
                android:textColor="@color/title_font_color"
                android:textSize="35sp"
                android:lineSpacingExtra="10dp"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>