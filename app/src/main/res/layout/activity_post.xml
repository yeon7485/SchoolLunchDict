<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:fontFamily="@font/cafe24_ssurround"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="게 시 글"
            android:textColor="@color/font_color"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/post_edit_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1.5"
            android:padding="8dp"
            android:src="@drawable/ic_brush"
            app:tint="@color/font_color"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/font_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/post_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/kotra_hope"
            android:padding="10dp"
            android:text="제목"
            android:textColor="@color/font_color"
            android:textSize="45sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/post_tv_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/kotra_hope"
            android:padding="10dp"
            android:text="내용\n내용\n내용"
            android:textColor="@color/font_color"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/post_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/kotra_hope"
            android:padding="10dp"
            android:text="닉네임"
            android:textColor="@color/font_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/post_tv_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/kotra_hope"
            android:padding="10dp"
            android:gravity="right"
            android:text="2021-12-13 00:07:30"
            android:textColor="@color/font_color"
            android:textSize="25sp" />

    </LinearLayout>

