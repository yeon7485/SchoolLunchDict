<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_background"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kotra_hope"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:text="메뉴 이름"
        android:textColor="@color/font_color"
        android:textSize="33sp" />

    <EditText
        android:id="@+id/dialog_et_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/font_color"
        android:fontFamily="@font/kotra_hope"
        android:background="@drawable/border_line"
        android:padding="10dp"
        android:textSize="25dp"
        android:hint="점수 입력"
        android:inputType="text"/>

    <Button
        android:id="@+id/dialog_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_border_pressed"
        android:layout_margin="16dp"
        android:textColor="@color/font_color"
        android:fontFamily="@font/kotra_hope"
        android:paddingHorizontal="20dp"
        android:textSize="25dp"
        android:text="별점 수정" />


</LinearLayout>